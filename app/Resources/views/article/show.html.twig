{% extends "base.html.twig" %}
{% block body %}
<h1>{{ article.title }}</h1>
<section>
    <p>
        {{ article.content }}
    </p>
    <ul>
        {% for tag in article.tags %}
            <li>{{ tag.name }}</li>
        {% endfor %}
    </ul>
    <a href="{{ path("article_update", {slug: article.slug}) }}">Update</a>
    <a href="{{ path("article_delete", {slug: article.slug, token: csrf_token("delete")}) }}">Delete</a>
</section>
{% endblock body %}